#include <stdio.h>

int main() {
    int n, i, topperIndex = 0;

    // Ask for number of students
    printf("Enter the number of students: ");
    scanf("%d", &n);

    int marks[n];
    char names[n][50]; // Array to store student names

    // Input student names and marks
    for(i = 0; i < n; i++) {
        printf("Enter name of student %d: ", i + 1);
        scanf("%s", names[i]);
        printf("Enter marks of %s: ", names[i]);
        scanf("%d", &marks[i]);
    }

    // Find the topper
    for(i = 1; i < n; i++) {
        if(marks[i] > marks[topperIndex]) {
            topperIndex = i;
        }
    }

    // Display topper details
    printf("\nTopper of the class:\n");
    printf("Name: %s\n", names[topperIndex]);
    printf("Marks: %d\n", marks[topperIndex]);

    return 0;
}