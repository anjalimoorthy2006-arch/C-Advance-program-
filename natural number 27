#include <stdio.h>

int main() {
    int n, i;
    int sum = 0;

    // Input value of n
    printf("Enter a number: ");
    scanf("%d", &n);

    // Calculate sum
    for (i = 1; i <= n; i++) {
        sum = sum + i;
    }

    // Display result
    printf("Sum of first %d natural numbers = %d", n, sum);

    return 0;
}