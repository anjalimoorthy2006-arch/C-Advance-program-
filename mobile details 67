#include <stdio.h>
#include <string.h>

// Define structure for Mobile
struct Mobile {
    int mobileID;
    char brand[50];
    char model[50];
    float price;
    int stock;
};

// Function to display mobile details
void display(struct Mobile m) {
    printf("\nMobile ID: %d\n", m.mobileID);
    printf("Brand: %s\n", m.brand);
    printf("Model: %s\n", m.model);
    printf("Price: %.2f\n", m.price);
    printf("Stock: %d\n", m.stock);
}

int main() {
    int n, i;

    // Input number of mobiles
    printf("Enter number of mobiles: ");
    scanf("%d", &n);

    struct Mobile mobiles[n]; // Array of structures

    // Input details for each mobile
    for(i = 0; i < n; i++) {
        printf("\nEnter details for mobile %d:\n", i + 1);

        printf("Mobile ID: ");
        scanf("%d", &mobiles[i].mobileID);

        printf("Brand: ");
        getchar(); // Consume leftover newline
        fgets(mobiles[i].brand, sizeof(mobiles[i].brand), stdin);
        mobiles[i].brand[strcspn(mobiles[i].brand, "\n")] = 0; // Remove newline

        printf("Model: ");
        fgets(mobiles[i].model, sizeof(mobiles[i].model), stdin);
        mobiles[i].model[strcspn(mobiles[i].model, "\n")] = 0; // Remove newline

        printf("Price: ");
        scanf("%f", &mobiles[i].price);

        printf("Stock: ");
        scanf("%d", &mobiles[i].stock);
    }

    // Display all mobile details
    printf("\n----- Mobile Details -----\n");
    for(i = 0; i < n; i++) {
        display(mobiles[i]);
    }

    return 0;
}