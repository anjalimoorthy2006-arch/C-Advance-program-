#include <stdio.h>

// Define a structure for Book
struct Book {
    int id;
    char title[50];
    float price;
};

int main() {
    int n, i;

    // Ask how many books to store
    printf("Enter the number of books: ");
    scanf("%d", &n);

    struct Book books[n];  // Array of structures

    // Input details for each book
    for(i = 0; i < n; i++) {
        printf("\nEnter details for book %d:\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &books[i].id);

        // Clear input buffer before reading string
        getchar();  
        
        printf("Book Title: ");
        fgets(books[i].title, sizeof(books[i].title), stdin);
        
        // Remove newline character from fgets
        size_t len = strlen(books[i].title);
        if(len > 0 && books[i].title[len - 1] == '\n') {
            books[i].title[len - 1] = '\0';
        }

        printf("Book Price: ");
        scanf("%f", &books[i].price);
    }

    // Display all book details
    printf("\n===== Book Details =====\n");
    for(i = 0; i < n; i++) {
        printf("\nBook %d:\n", i + 1);
        printf("ID: %d\n", books[i].id);
        printf("Title: %s\n", books[i].title);
        printf("Price: %.2f\n", books[i].price);
    }

    return 0;
}