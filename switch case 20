#include <stdio.h>

int main() {
    int choice;

    // Display menu
    printf("Menu:\n");
    printf("1. Tea\n");
    printf("2. Coffee\n");
    printf("3. Juice\n");
    printf("4. Exit\n");

    // User choice
    printf("Enter your choice (1-4): ");
    scanf("%d", &choice);

    // Switch case to select item
    switch (choice) {
        case 1:
            printf("You selected Tea.");
            break;
        case 2:
            printf("You selected Coffee.");
            break;
        case 3:
            printf("You selected Juice.");
            break;
        case 4:
            printf("Thank you! Exit.");
            break;
        default:
            printf("Invalid choice.");
    }

    return 0;
}