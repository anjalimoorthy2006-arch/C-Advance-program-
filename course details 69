#include <stdio.h>
#include <string.h>

// Define structure for Course
struct Course {
    int courseID;
    char courseName[50];
    char instructor[50];
    int duration; // Duration in weeks
    float fee;
};

// Function to display course details
void display(struct Course c) {
    printf("\nCourse ID: %d\n", c.courseID);
    printf("Course Name: %s\n", c.courseName);
    printf("Instructor: %s\n", c.instructor);
    printf("Duration: %d weeks\n", c.duration);
    printf("Fee: %.2f\n", c.fee);
}

int main() {
    int n, i;

    // Input number of courses
    printf("Enter number of courses: ");
    scanf("%d", &n);

    struct Course courses[n]; // Array of structures

    // Input details for each course
    for(i = 0; i < n; i++) {
        printf("\nEnter details for course %d:\n", i + 1);

        printf("Course ID: ");
        scanf("%d", &courses[i].courseID);

        printf("Course Name: ");
        getchar(); // Consume leftover newline
        fgets(courses[i].courseName, sizeof(courses[i].courseName), stdin);
        courses[i].courseName[strcspn(courses[i].courseName, "\n")] = 0; // Remove newline

        printf("Instructor Name: ");
        fgets(courses[i].instructor, sizeof(courses[i].instructor), stdin);
        courses[i].instructor[strcspn(courses[i].instructor, "\n")] = 0; // Remove newline

        printf("Duration (weeks): ");
        scanf("%d", &courses[i].duration);

        printf("Fee: ");
        scanf("%f", &courses[i].fee);
    }

    // Display all course details
    printf("\n----- Course Details -----\n");
    for(i = 0; i < n; i++) {
        display(courses[i]);
    }

    return 0;
}