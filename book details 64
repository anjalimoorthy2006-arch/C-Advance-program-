#include <stdio.h>
#include <string.h>

// Define structure for a Book
struct Book {
    int bookID;
    char title[100];
    char author[50];
    int year;
    float price;
};

int main() {
    int n, i;

    // Ask user for number of books
    printf("Enter number of books: ");
    scanf("%d", &n);

    struct Book books[n];  // Array of structures

    // Input details for each book
    for(i = 0; i < n; i++) {
        printf("\nEnter details for book %d:\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &books[i].bookID);

        printf("Title: ");
        getchar(); // Consume leftover newline
        fgets(books[i].title, sizeof(books[i].title), stdin);
        books[i].title[strcspn(books[i].title, "\n")] = 0; // Remove newline

        printf("Author: ");
        fgets(books[i].author, sizeof(books[i].author), stdin);
        books[i].author[strcspn(books[i].author, "\n")] = 0; // Remove newline

        printf("Publication Year: ");
        scanf("%d", &books[i].year);

        printf("Price: ");
        scanf("%f", &books[i].price);
    }

    // Display all book details
    printf("\n----- Library Book Details -----\n");
    for(i = 0; i < n; i++) {
        printf("\nBook %d\n", i + 1);
        printf("Book ID: %d\n", books[i].bookID);
        printf("Title: %s\n", books[i].title);
        printf("Author: %s\n", books[i].author);
        printf("Publication Year: %d\n", books[i].year);
        printf("Price: %.2f\n", books[i].price);
    }

    return 0;
}