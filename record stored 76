#include <stdio.h>
#include <string.h>

// Define a structure for a Record
struct Record {
    int id;
    char name[50];
};

int main() {
    int n, i;

    // Ask user for number of records
    printf("Enter the number of records: ");
    scanf("%d", &n);

    struct Record records[n];  // Array of structures

    // Input details for each record
    for(i = 0; i < n; i++) {
        printf("\nEnter details for record %d:\n", i + 1);

        printf("ID: ");
        scanf("%d", &records[i].id);

        getchar(); // Clear input buffer
        printf("Name: ");
        fgets(records[i].name, sizeof(records[i].name), stdin);

        // Remove newline character from fgets
        size_t len = strlen(records[i].name);
        if(len > 0 && records[i].name[len - 1] == '\n') {
            records[i].name[len - 1] = '\0';
        }
    }

    // Display all records
    printf("\n===== Records Stored =====\n");
    for(i = 0; i < n; i++) {
        printf("Record %d - ID: %d, Name: %s\n", i + 1, records[i].id, records[i].name);
    }

    // Display count of records
    printf("\nTotal number of records stored: %d\n", n);

    return 0;
}