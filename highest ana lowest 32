#include <stdio.h>

int main() {
    float temp[7];
    int i;
    float highest, lowest;

    // Input temperatures for 7 days
    for(i = 0; i < 7; i++) {
        printf("Enter temperature for day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    // Initialize highest and lowest with the first day's temperature
    highest = lowest = temp[0];

    // Find highest and lowest temperature
    for(i = 1; i < 7; i++) {
        if(temp[i] > highest) {
            highest = temp[i];
        }
        if(temp[i] < lowest) {
            lowest = temp[i];
        }
    }

    // Display results
    printf("\nHighest temperature: %.2f\n", highest);
    printf("Lowest temperature: %.2f\n", lowest);

    return 0;
}